<% include partials/head %>
<body style="overflow-x:hidden;">
<% include partials/nav %>

<div class="container">
    <div class="row">
        <div class="col l10 offset-l1 m10 offset-m1 s10 offset-s1" style="margin-top: 60px;"><!--main holder-->
            <form id="myAwesomeForm" action="/register_courses/" method="POST" encType="multipart/form-data">
                <div class="row">
                    <div class="col l12 m12 s12 red darken-2 white-text" style="padding:10px 10px; background-color: #fff; color:white;<%if(error_code != 2){ %> display: none; <% } %>">
                        <p class="center"><%if(error_code == 2 && typeof general_error != undefined){ %> <%=general_error %> <% } %></p>
                    </div>

                    <div class="col l12 m12 s12">
                        <h3 class="center pink-text text-darken-4">Registration For a New Program</h3>
                        <p class="center"><small>Please Complete the form below</small></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col l6 m6 s12" style="margin-top: 10px;">

                        <div class="input-field">
                            <input value="<%=user_details.sur_name+' '+user_details.first_name+' '+user_details.last_name %>" readonly onblur="<%=error_remover%>" id="full_name" type="text" class="validate zero_margin">
                            <label for="full_name" class="indigo-text text-darken-4">Full Name</label>
                        </div>

                    </div>

                    <div class="col l6 m6 s12" style="margin-top: 10px;">

                        <div class="input-field">

                            <input value="<%=user_details.email %>" placeholder="Academic Qualification" name="email" onblur="<%=error_remover%>" id="email" type="text" class="validate zero_margin">
                            <label for="email" class="active indigo-text text-darken-4">Email</label>

                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col l12 m12 s12 indigo-text text-darken-4" style="margin-top: 10px;">
                        <span>Select Course(s)</span>
                        <div class="error_carrier" style="<%if(error_code != 1){ %> display: none; <% } %>"><%if(error_code == 1){ %> <%=error_array.courses %> <% } %></div>
                    </div>
                </div>

                <div class="row">
                    <% courses.forEach(function (courses_offered) { %>
                    <div class="col l3 m4 s12" >

                        <label class="indigo-text text-darken-4">
                            <input name="courses" value="<%=courses_offered.course_id%>" type="checkbox" />
                            <span><%=courses_offered.course_name %></span>

                        </label>

                    </div>
                    <% }) %>
                </div>

                <div class="row">
                    <div class="col l6 m6 s12">
                        <div class="input-field">
                            <input id="amount_charged" class="file-path validate" name="amount_charged" type="text" value="<%=values.amount_charged %>" >
                            <label class="active indigo-text text-darken-4">Amount Charged (NGN)</label>
                            <div class="error_carrier" style="<%if(error_code != 1){ %> display: none; <% } %>"><%if(error_code == 1){ %> <%=error_array.amount_charged %> <% } %></div>
                        </div>
                    </div>

                    <div class="col l6 m6 s12" >
                        <div class="input-field">
                            <input id="amount_paid" class="file-path validate active" name="amount_paid" value="<%=values.amount_paid%>" type="text" >
                            <label class="active indigo-text text-darken-4">Amount Paid (NGN)</label>
                            <div class="error_carrier" style="<%if(error_code != 1){ %> display: none; <% } %>"><%if(error_code == 1){ %> <%=error_array.amount_paid %> <% } %></div>
                        </div>
                    </div>
                </div>

                <!--<div class="col l4 m4 s12" >
                    <div class="input-field">
                        <input class="file-path validate" id="balance" name="balance" type="text" >
                        <label class="active indigo-text text-darken-4">Balance (NGN)</label>
                        <div class="error_carrier" style="<%if(error_code != 1){ %> display: none; <% } %>"><%if(error_code == 1){ %> <%=error_array.balance %> <% } %></div>
                    </div>
                </div>-->

                <div class="row">
                    <div class="col l12 m12 s12 indigo-text text-darken-4" style="margin-top: 30px;">
                        <div class="error_carrier" style="<%if(error_code != 1){ %> display: none; <% } %>"><%if(error_code == 1){ %> <%=error_array.checker %> <% } %></div>
                    </div>


                    <p class="col l12 m12 s12" style="margin-top: 10px;">

                        <label>
                            <input value="affirmed" name="checker" type="checkbox" />
                            <span class="grey-text text-darken-2"> I <strong><%=user_details.sur_name+' '+user_details.first_name+' '+user_details.last_name %></strong> hereby state that i will be of good character and satify my obligations during the course of my training. I also state that TechoCraft can take any action deemed fit upon default in any of my obligations during my training.</span>
                        </label>
                    </p>

                    <div class="col l12 m12 s12" style="margin-top: 30px;">
                        <input type="hidden" id="random_number_holder" name="random_number" value="<%=random_number %>">
                        <button class="btn waves-effect waves-light btn-large indigo darken-4" style="width: 100%;" type="submit" name="submit_form"><strong style="font-weight: bold; font-size: 18px;">Submit</strong>&emsp13;&emsp13;<i class="fa fa-arrow-circle-right"></i>
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

</body>
<% include partials/footer %>
</html>

